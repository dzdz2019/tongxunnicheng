<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="1dp"
    android:background="@color/dise"
    android:gravity="center_vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="0dp">
<!--加上以上两个属性防止刚进入Activity时EditText抢占焦点-->
    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="1"
        android:textColor="@color/c333333" />
    <TextView
        android:id="@+id/tv_indexid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/c333333" />

    <EditText
        android:id="@+id/mIvshangpinguigeada_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="@dimen/text_14"
        android:textColor="@color/c333333"
        android:padding="5dp"
        android:gravity="right"
        android:hint="如:白色,128G"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/mIvshangpinguigeada_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="@dimen/text_14"
        android:textColor="@color/c333333"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:digits="0.123456789"
        android:padding="5dp"
        android:maxLength="9"
        android:gravity="right"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/mIvshangpinguigeada_kucun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="@dimen/text_14"
        android:textColor="@color/c333333"
        android:gravity="right"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="9"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_weight="1"/>

    <!--给ImageView设置padding效果不明显，所有加上一个布局以扩大点击范围-->
    <LinearLayout
        android:id="@+id/ll_delete"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/ib_delete"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@mipmap/del"
            android:padding="14dp" />
    </LinearLayout>

</LinearLayout>